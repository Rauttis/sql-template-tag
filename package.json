{
  "name": "sql-template-tag",
  "version": "3.3.0",
  "description": "ES2015 tagged template string for preparing SQL statements, works with `pg` and `mysql`",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prettier": "prettier --write",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "format": "npm run prettier -- README.md \"{.,src/**/}*.{js,jsx,json,ts,tsx,css,md,yml,yaml}\"",
    "build": "rimraf dist && tsc",
    "specs": "jest --coverage",
    "test": "npm run -s lint && npm run -s build && npm run -s specs",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/blakeembrey/sql-template-tag.git"
  },
  "keywords": [
    "sql",
    "template",
    "string",
    "tag",
    "es2015",
    "es6",
    "pg",
    "postgres",
    "mysql"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blakeembrey/sql-template-tag/issues"
  },
  "homepage": "https://github.com/blakeembrey/sql-template-tag",
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,css,md,yml,yaml}": [
      "npm run prettier",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "bytes": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.0",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "decorator-cache-getter": "^1.0.0"
  }
}
